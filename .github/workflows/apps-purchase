name: Build Purchase Apps 

on:
  workflow_dispatch

jobs:
  build-and-deploy:
    runs-on: self-hosted
    steps:
      - uses: ./.github/workflows/common-steps.yml

      - name: Build Apps Purchase App
        run: ng build apps-purchase --configuration production

      - name: Create Destination Directory
        shell: pwsh
        run: New-Item -ItemType Directory -Path "D:\front\dist\apps-purchase" -Force

      - name: Copy output to D:\front
        shell: pwsh
        run: |
          xcopy /s /y dist\apps-purchase\* D:\front\dist\apps-purchase\
          Write-Host "Apps Purchase Deployment successful!"
