{
  "name": "microtecadminfrontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:bussiness-owners": "ng build --project bussiness-owners",
    "build:adminportal": "ng build --project adminportal",
    "build:hr": "ng build --project apps-hr",
    "build:erp": "ng build --project erp-home",
    "build:accounting": "ng build --project apps-accounting",
    "start:bussiness-owners": "ng serve --project bussiness-owners --port 4301",
    "start:bussiness-owners-stage": "ng serve --project bussiness-owners --port 4301 --configuration stage",
    "start:erp-home": "ng serve --project erp-home --host develop.localhost.com",
    "start:accounting": "ng serve --project apps-accounting --host develop.localhost.com ",
    "start:hr": "ng serve --project apps-hr --host develop.localhost.com",
    "start:adminportal": "ng serve --project adminportal --port 4303",
    "start:erp":"concurrently \"npm run start:erp-gateway\" \"npm run start:erp-home\" \"npm run start:accounting\" \"npm run start:hr\"",
    "start:gateway": "node proxy.js",
    "start:erp-gateway": "node erp-proxy.js",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:bussiness-owners\" \"npm run start:adminportal\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
